<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence">
    <persistence-unit name="testPU" transaction-type="RESOURCE_LOCAL">
        <class>com.steeplesoft.frenchpress.model.Attachment</class>
        <class>com.steeplesoft.frenchpress.model.BlogEntry</class>
        <class>com.steeplesoft.frenchpress.model.CalendarEntry</class>
        <class>com.steeplesoft.frenchpress.model.Comment</class>
        <class>com.steeplesoft.frenchpress.model.Meeting</class>
        <class>com.steeplesoft.frenchpress.model.Preference</class>
        <class>com.steeplesoft.frenchpress.model.Registration</class>
        <class>com.steeplesoft.frenchpress.model.Sponsor</class>
        <class>com.steeplesoft.frenchpress.model.Upload</class>
        <class>com.steeplesoft.frenchpress.model.User</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:mem:frenchpress"/>
            <property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="javax.persistence.jdbc.user" value="sa"/>
            <property name="javax.persistence.jdbc.password" value=""/>

<!--            <property name="eclipselink.platform.class.name" value="org.eclipse.persistence.platform.database.HSQLPlatform"/>-->
            <property name="eclipselink.target-database" value="HSQL"/>
            <property name="eclipselink.ddl-generation" value="drop-and-create-tables" />
            <property name="eclipselink.create-ddl-jdbc-file-name" value="create.sql"/>
        </properties>
    </persistence-unit>
</persistence>